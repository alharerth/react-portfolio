{
    "compilerOptions": {
      "typeRoots": ["./node_modules/@types", "./src/types"],
      "target": "ES6",                       
      "module": "ESNext",                    
      "jsx": "react-jsx",                    
      "strict": true,                        
      "moduleResolution": "node",           
      "esModuleInterop": true,              
      "skipLibCheck": true,                 
      "forceConsistentCasingInFileNames": true,
      "outDir": "./build",                   
      "baseUrl": "./",                      
      "paths": {                             
        "*": ["node_modules/*", "src/types/*"]
      }
    },
    "include": ["src"],
    "exclude": ["node_modules", "build"]
  }
  